{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "adonis-preset-ts/tsconfig.json",
  "include": [
    "**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "resources"
  ],
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": "./",
    "outDir": "dist",
    "sourceMap": true,
    "jsx": "react-jsx",
    "paths": {
      "App/*": [
        "./app/*"
      ],
      "Config/*": [
        "./config/*"
      ],
      "Contracts/*": [
        "./contracts/*"
      ],
      "Database/*": [
        "./database/*"
      ],
      "~/*": [
        "./resources/js/*"
      ],
      "~/styled-system/*": [
        "./resources/js/styled-system/*"
      ]
    },
    "types": [
      "@adonisjs/core",
      "@adonisjs/repl",
      "@japa/preset-adonis/build/adonis-typings",
      "@adonisjs/lucid",
      "@adonisjs/auth",
      "@adonisjs/view",
      "@adonisjs/session",
      "@eidellev/inertia-adonisjs"
    ]
  }
}
